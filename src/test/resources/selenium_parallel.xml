<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >
<suite name="Parallel browsers test" parallel="tests" thread-count="3">
    <test name="Firefox">
        <parameter name="browser" value="firefox" />
        <classes>
            <class name="tests.SeleniumParallelTest" />
        </classes>
    </test>
    <test name="Chrome">
        <parameter name="browser" value= "chrome" />
        <classes>
            <class name="tests.SeleniumParallelTest" />
        </classes>
    </test>
    <test name="Edge">
        <parameter name="browser" value="edge" />
        <classes>
            <class name="tests.SeleniumParallelTest" />
        </classes>
    </test>
</suite>